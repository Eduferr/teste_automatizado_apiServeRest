{
  "name": "teste_automatizado_apiserverest",
  "version": "1.0.0",
  "description": "Automação de teste API ServeRest",
  "main": "index.js",
  "scripts": {
    "start": "npx serverest",
    "test": "npx cypress open",
    "cy:run": "npx cypress run",
    "report:merge": "npx mochawesome-merge mochawesome-report/*.json -o mochawesome-report/report.json",
    "report:generate": "npx marge mochawesome-report/report.json -f index -o mochawesome-report",
    "cy:run:report": "npm run cy:run && npm run report:merge && npm run report:generate",
    "cy:run-ci": "start-server-and-test start http://localhost:3000/api-doc cy:run:report"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Eduferr/teste_automatizado_apiServeRest.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/Eduferr/teste_automatizado_apiServeRest/issues"
  },
  "homepage": "https://github.com/Eduferr/teste_automatizado_apiServeRest#readme",
  "devDependencies": {
    "@faker-js/faker": "^10.0.0",
    "cypress": "^15.4.0"
  },
  "dependencies": {
    "joi": "^18.0.1",
    "mochawesome": "^7.1.4",
    "mochawesome-merge": "^5.0.0",
    "mochawesome-report-generator": "^6.3.2",
    "start-server-and-test": "^2.1.2"
  }
}
